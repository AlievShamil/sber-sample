<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devcom.sber_sample.MainActivity">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/layout_divider"
        android:showDividers="middle"
        android:dividerPadding="8dp"
        >

        <View
            android:id="@+id/first_animated_view"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/vertical_padding"
            android:layout_marginTop="@dimen/vertical_padding"
            android:background="@drawable/layer_list1" />

        <View
            android:id="@+id/second_animated_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/vertical_padding"
            android:layout_marginTop="@dimen/vertical_padding"
            android:background="@drawable/layer_list3" />

        <View
            android:id="@+id/third_animated_view"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/vertical_padding"
            android:layout_marginTop="@dimen/vertical_padding"
            android:background="@drawable/layer_list2" />
    </LinearLayout>

</ScrollView>
